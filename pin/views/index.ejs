<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-[url('https://i.pinimg.com/564x/43/24/5c/43245ca240bf793904e46b56087b7658.jpg')] flex items-center justify-center">
  <div class="w-[25vw] h-[60vh] bg-white px-20 px-7 rounded-[30px]">
    <h1 class="text-3xl pt-7 text-center  tracking-tighter font-semibold text-zinc-700 capitalize leading-none ">Welcome To pinterest</h1>
    <form action="/login" method="post">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot password</a>
      <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">
        By continuing , you agree to pinterest Terms of service.
         Open a new tab and acknowledge that 
         you've read our privacy policy.
      
      </p>
    </form> 
    <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Dont have an account?</a>
  </div>
</div>
